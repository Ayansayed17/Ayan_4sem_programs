#include<stdio.h>
void main(){
    int m,i,j,a,n;
    printf("Enter the value of 'a' : ");
    scanf("%d",&a);
    if(a<2)
        printf("Invalid input.");
    else{
    printf("\nPattern 6 : \n");
        for(i=1;i<=a;i++){
