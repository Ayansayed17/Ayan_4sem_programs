#include<stdio.h>
void main(){
    int m,i,j,a,n;
    printf("Enter the value of 'a' : ");
    scanf("%d",&a);
    if(a<2)
        printf("Invalid input.");
    else{
        printf("\nPattern 1 : \n");
        for(i=0;i<=a;i++){
            for(j=0;j<=i;j++)
                printf("* ");
            printf("\n");
        }
